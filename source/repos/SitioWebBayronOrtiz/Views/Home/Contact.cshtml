@model SitioWebBayronOrtiz.Models.Contacto
@{
    ViewBag.Title = "Contacto";
}
<div class="container content-area">
    <h2>@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>

    <div class="jumbotron">

        @using (Html.BeginForm("Contact", "Home", FormMethod.Post)) { 
        
            <div class="form-group">
                @Html.LabelFor(m => m.Name, "Nombre")
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, "Email")
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" , type = "email" , placeholder = "@ejemplo.com" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Asunto, "Asunto")
                @Html.TextBoxFor(m => m.Asunto, new {@class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Mensaje, "Mensaje")
                @Html.TextAreaFor(m => m.Mensaje, new { @class = "form-control", plaveholder = "Escribe aqui tu mensaje" })
            </div>
        
            <button type="submit" class="btn btn-primary"> Enviar </button> 
        
        }



    </div>


</div>






